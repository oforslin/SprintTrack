<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SprintTrack.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SprintTrack"
    Title="SprintTrack">

    <TabBar>
        <ShellContent
            Title="Kalender"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="calendar" />
            
        <ShellContent
            Title="Lista"
            ContentTemplate="{DataTemplate local:TrainingListPage}"
            Route="trainings" />
    </TabBar>

</Shell>
